{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "$components/*": [
        "./src/components/*"
      ],
      "$models/*": [
        "./src/models/*"
      ],
      "$services/*": [
        "./src/services/*"
      ],
      "$pages/*": [
        "./src/pages/*"
      ],
      "$root/*": [
        "./src/*"
      ],
      "$public/*": [
        "./public/*"
      ],
      "$lib/*": [
        "./lib/*"
      ]
    }
  },
  "include": [
    "src",
    "lib"
  ],
}